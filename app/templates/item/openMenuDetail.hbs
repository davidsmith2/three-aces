<div id="restaurantInfo">
    <div class="span8">
        <div class="row">
            <div class="span7">
                <h2>Restaurant Info</h2>
            </div>
            <div class="span1 text-right">
                <a class="btn btn-primary btn-small" href="#addRestaurant">Edit</a>
            </div>
        </div>
        <div class="row">
            <div class="span8">
                <address>
                    <p>{{restaurantInfo.restaurantName}}<br>
                    {{restaurantInfo.address1}}<br>
                    {{restaurantInfo.cityTown}}, {{restaurantInfo.stateProvince}} {{restaurantInfo.postalCode}}<br>
                    {{restaurantInfo.country}}</p>
                </address>
                <dl>
                    <dt>Phone:</dt>
                        <dd>{{restaurantInfo.phone}}</dd>
                    <dt>Fax:</dt>
                        <dd>{{restaurantInfo.fax}}</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div id="environmentInfo">
    <div class="span8">
        <div class="row">
            <div class="span7">
                <h2>Environment Info</h2>
            </div>
            <div class="span1 text-right">
                <a class="btn btn-primary btn-small" href="#addEnvironment">Edit</a>
            </div>
        </div>
        <div class="row">
            <div class="span8">
                <dl>
                    <dt>Takeout available?</dt>
                        <dd>{{environmentInfo.takeoutAvailable}}</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
